<h1>
      <span class="label label-primary"><%= @post.title %></span>  
        <% if user_signed_in? %> 
          <% if current_user.admin %>
             <small><%= link_to '    edit', edit_post_path(@post) %></small>
          <% end %> 
		<% end %> 	
		
</h1>



 
<p><span class="label label-default"><%= markdown(@post.body)%></span></p>


<h2>Comments</h2>
<% @post.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>
 
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>

<h2>Add a comment:</h2>
<% if user_signed_in? %> 
  
<%= form_for([@post, @post.comments.build]) do |f| %>
 <%= commenter= current_user.name %>
  <p>
  <div class="input-group input-group-lg">
    <span class="input-group-addon" id="sizing-addon1">User</span>
    <input type="text" class="form-control" placeholder=<%= current_user.name%> aria-describedby="sizing-addon1">
  </div>
  </p>
  <%= commenter= current_user.name %>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
<% end %>

<%= link_to 'Back', post_path %>
